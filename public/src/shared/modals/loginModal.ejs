<div class="modal-body">		
	<span class="modal-close-btn pull-right flaticon-cross31" ng-click="close()"></span>
	<div class="signupModal">
		<div class="row">
			<div class="col-sm-12">
				<h4>Log In</h4>
			</div>
		</div>
		<form class="form-horizontal">
			<div class="form-group">
				<div class="col-sm-12">
					<input type="email" class="form-control" id="inputEmail" placeholder="Email">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<input type="password" class="form-control" id="inputPassword" placeholder="Password">
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<h6 class="forgot-text"><a href="#" ng-click="openPasswordModal()">Forgot Password?</a></h6>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<button type="submit" class="btn btn-default btn-block">Log In</button>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<h5 class="sign-text">Or</h5>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<button type="submit" class="btn btn-default btn-block">Login with Facebook</button>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<h5 class="sign-text">Don't have an account? <a href="#" data-dismiss="modal" data-toggle="modal" data-target="#signupModal">Sign Up</a></h5>
				</div>
			</div>
		</form>
	</div>
</div>