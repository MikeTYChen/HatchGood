<div id="forgotModal" class="modal fade loginSignModal" tabindex="-1" role="dialog" aria-labelledby="forgotModal">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
		<div class="row">
			<div class="col-sm-12">
				<h4>Forgot Password?</h4>
			</div>
		</div>
		<form class="form-horizontal">
			<div class="form-group">
				<div class="col-sm-12">
					<h5 class="reset-text">Type in the email associated to your account. We will send an email to reset your password</h5>
				</div>
			</div>
			<div class="form-group">
				<div class="col-sm-12">
					<input type="email" class="form-control" id="inputEmail" placeholder="Email">
				</div>
			</div>
			<div class="form-group">
					<div class="col-sm-12 reset-btn-box">
						<button type="submit" class="btn btn-dark">Confirm</button>
					</div>
			</div>
		</form>
    </div>
  </div>
</div>